@model Chronos.Web.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<a asp-page="CreateAccount">Create new account</a><br>
<a asp-page="TrackNicehashOrder">Track new nicehash order</a>
<div class="row">
    <div class="col-lg-1">
        <form asp-page-handler="CreateCoin" method="post">
            <button class="btn btn-default">Create new coin</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-lg-1">
        <form asp-page-handler="TrackCoin" method="post">
